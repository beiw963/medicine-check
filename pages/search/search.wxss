.page {
  height: 100vh;
  background: #f7f7f7;
}

.container {
  padding: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.search-container {
  width: 100%;
  margin: 20rpx auto;
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: #ffffff;
  border-radius: 40rpx;
  padding: 0 80rpx 0 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}

.clear-icon {
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 30rpx;
  z-index: 1;
}

.search-results {
  flex: 1;
  width: 100%;
  margin: 20rpx auto;
  height: calc(100vh - 180rpx); /* Set explicit height */
  overflow-y: auto;
}

.medicine-item {
  background: #ffffff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.medicine-name {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.medicine-brand {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.medicine-manufacturer {
  font-size: 22rpx;
  color: #888;
  margin-bottom: 8rpx;
}

.medicine-tags {
  display: flex;
  flex-wrap: wrap;
  margin: -5rpx;
}

.tag {
  font-size: 22rpx;
  color: #666;
  background: #f5f5f5;  /* Light red background */
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  margin: 5rpx;
  display: flex;
  align-items: center;     /* Vertical center */
  justify-content: center; /* Horizontal center */
  min-height: 40rpx;      /* Fixed height for the box */
  min-width: 80rpx;       /* Minimum width for the box */
  box-sizing: border-box;
}

.tag text {
  color: #000000;  /* Green text color */
}

.loading,
.no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 22rpx;
}

.loading text {
  display: inline-block;
  padding: 10rpx 0;
}
